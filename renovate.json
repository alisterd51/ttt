{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "baseBranches": ["master"],
  "extends": [
    "config:best-practices",
    "default:semanticCommits",
    ":disableRateLimiting",
    ":rebaseStalePrs"
  ],
  "enabledManagers": [
    "helm-values"
  ],
  "helm-values": {
    "fileMatch": [
      "^/values/base/.*\\.yaml$"
    ]
  }
}
