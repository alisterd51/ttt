{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "baseBranches": [
    "master"
  ],
  "commitMessageSuffix": "({{updateType}})",
  "extends": [
    "config:recommended",
    "default:semanticCommits",
    ":disableRateLimiting",
    ":rebaseStalePrs"
  ],
  "enabledManagers": [
    "regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)helmfile\\.ya?ml\\.gotmpl$"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        "version: (?<currentValue>.*?) # renovate: depName=(?<depName>.*?) registryUrl=(?<registryUrl>.*?)( datasource=(?<datasource>.*?))?( depType=(?<depType>.*?))?\\n"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}helm{{/if}}",
      "depTypeTemplate": "{{#if depType}}{{{depType}}}{{else}}helm_release{{/if}}",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)helmfile\\.ya?ml\\.gotmpl$",
        "\\.ya?ml$"
      ],
      "matchStrings": [
        ".*?_VERSION: (?<currentValue>.*) # renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\n",
        "image: \"?(?<depName>.*?):(?<currentValue>.*\\d+?)\"? # renovate: datasource=(?<datasource>.*?)( versioning=(?<versioning>.*?))?\\n"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-tags{{/if}}",
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["stedolan/jq"],
      "versioning": "regex:^jq-?(?<major>\\d+)\\.(?<minor>\\d+)?$"
    },
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["carvel-dev/ytt", "mikefarah/yq"],
      "versioning": "node"
    },
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["gcr.io/google_containers/pause-amd64"],
      "versioning": "regex:^?(?<major>\\d+)\\.(?<minor>\\d+)?$"
    },
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["quay.io/galexrt/node-exporter-textfiles"],
      "versioning": "regex:^v-?(?<major>\\d+)-(?<minor>\\d+)-(?<patch>\\d+)?$"
    },
    {
      "groupName": "regex patch dependencies",
      "groupSlug": "regex-patch",
      "matchCategories": ["regex"],
      "matchUpdateTypes": ["patch"],
      "enabled": true
    },
    {
      "groupName": "regex minor dependencies",
      "groupSlug": "regex-minor",
      "matchCategories": ["regex"],
      "matchUpdateTypes": ["minor"],
      "matchCurrentVersion": "!/^0/",
      "enabled": true
    }
  ]
}

