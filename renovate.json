{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "baseBranches": [
    "master"
  ],
  "commitMessageSuffix": "({{updateType}})",
  "extends": [
    "config:recommended",
    "default:semanticCommits",
    ":disableRateLimiting",
    ":rebaseStalePrs"
  ],
  "enabledManagers": [
    "regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "test\\.ya?ml"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s .*?_VERSION: (?<currentValue>.*)\\s"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-tags{{/if}}",
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["stedolan/jq"],
      "versioning": "regex:^jq-?(?<major>\\d+)\\.(?<minor>\\d+)?$"
    }
  ]
}
