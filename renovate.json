{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "baseBranches": [
    "master"
  ],
  "commitMessageSuffix": "({{updateType}})",
  "extends": [
    "config:recommended",
    "default:semanticCommits",
    ":disableRateLimiting",
    ":rebaseStalePrs"
  ],
  "enabledManagers": [
    "regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "test\\.ya?ml"
      ],
      "matchStringsStrategy": "any",
      "matchStrings": [
        ": (?<currentValue>.*?) # renovate: depName=(?<depName>.*?)",
        "version: (?<currentValue>.*?) # renovate: depName=(?<depName>.*?) registryUrl=(?<registryUrl>.*?)( datasource=(?<datasource>.*?))?( depType=(?<depType>.*?))?\\n"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}"
    }
  ]
}
