{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "baseBranches": [
    "master"
  ],
  "commitMessageSuffix": "({{updateType}})",
  "extends": [
    "config:recommended",
    "default:semanticCommits",
    ":disableRateLimiting",
    ":rebaseStalePrs"
  ],
  "includePaths": [
    "charts/**"
  ],
  "enabledManagers": [
    "regex",
    "helmv3"
  ],
  "postUpdateOptions": [
    "helmUpdateSubChartArchives"
  ],
  "bumpVersion": "minor"
}
