{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "baseBranches": [
    "master"
  ],
  "commitMessageSuffix": "({{updateType}})",
  "extends": [
    "config:recommended",
    "default:semanticCommits",
    ":disableRateLimiting",
    ":rebaseStalePrs"
  ],
  "enabledManagers": [
    "regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "test\\.ya?ml"
      ],
      "matchStrings": [
        ".*?_VERSION: (?<currentValue>.*) # renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?",
        "version: (?<currentValue>.*?) # renovate: depName=(?<depName>.*?) registryUrl=(?<registryUrl>.*?)( datasource=(?<datasource>.*?))?( depType=(?<depType>.*?))?\\n",
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s .*?_VERSION: (?<currentValue>.*)\\s"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-tags{{/if}}",
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
